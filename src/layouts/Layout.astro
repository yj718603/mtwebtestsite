---
import "../styles/global.css";
const defaultLang = "zh-Hans"; // 默认语言
---

<!doctype html>
<html lang={defaultLang}>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <link rel="stylesheet" href="/css/harmony_fonts.css" />
        <link rel="stylesheet" href="/css/fonts.css" />
        <link rel="stylesheet" href="/css/index.css" />
        <title>mTranslator</title>
    </head>
    <body lang="zh-Hans">
        <slot />
    </body>
</html>

<style>
    html,
    body {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
        font-size: clamp(14px, 0.833vw, 18px);
    }
    .fullsizeButton {
        background-color: rgba(124, 58, 237, 1);
        border-radius: 4px;
        border: none;
        width: 12.5rem;
        height: 3.75rem;
        color: rgba(255, 255, 2555, 1);
        font-size: 1.25rem;
        padding: 1rem 3.75rem;
    }
    .fullsizeButton:hover {
        background-color: rgba(105, 49, 201, 1);
        color: rgba(255, 255, 255, 1);
    }
</style>
